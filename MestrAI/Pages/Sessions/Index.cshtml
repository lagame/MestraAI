@page
@model RPGSessionManager.Pages.Sessions.IndexModel
@{
    ViewData["Title"] = "Sessões";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Minhas Sessões</h2>
            @if (User.IsInRole("Narrator") || User.IsInRole("Admin"))
            {
                <a asp-page="./Create" class="btn btn-primary">Nova Sessão</a>
            }
        </div>

        @if (Model.Sessions.Any())
        {
            <div class="row">
                @foreach (var session in Model.Sessions)
                {
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@session.Name</h5>
                                <p class="card-text">
                                    <small class="text-muted">
                                        Sistema: @(session.SystemName ?? "Não definido")<br>
                                        Cenário: @(session.ScenarioName ?? "Não definido")<br>
                                        Narrador: @session.NarratorName
                                    </small>
                                </p>
                                <div class="btn-group" role="group">
                                    <a asp-page="./Details" asp-route-id="@session.Id" class="btn btn-outline-primary btn-sm">Ver</a>
                                    @if (User.IsInRole("Narrator") || User.IsInRole("Admin"))
                                    {
                                        <a asp-page="./Edit" asp-route-id="@session.Id" class="btn btn-outline-secondary btn-sm">Editar</a>
                                    }
                                </div>
                            </div>
                            <div class="card-footer text-muted">
                                <small>Criada em @session.CreatedAt.ToString("dd/MM/yyyy")</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <h4>Nenhuma sessão encontrada</h4>
                <p>Você ainda não participa de nenhuma sessão de RPG.</p>
                @if (User.IsInRole("Narrator") || User.IsInRole("Admin"))
                {
                    <a asp-page="./Create" class="btn btn-primary">Criar primeira sessão</a>
                }
            </div>
        }
    </div>
</div>

