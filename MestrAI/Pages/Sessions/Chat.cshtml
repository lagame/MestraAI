            `;
        }
    } catch (error) {
        console.error('Erro ao atualizar estat√≠sticas de mem√≥ria:', error);
        statsContainer.innerHTML = `
            <div class="text-center text-danger">
                <i class="bi bi-x-circle"></i>
                <p class="mb-0">Erro de conex√£o</p>
