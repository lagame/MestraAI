@page
@model IndexModel
@{
    ViewData["Title"] = "Início";
}

<div class="hero-section text-center py-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">
                    @* <i class="bi bi-dice-6 text-primary me-3"></i> *@
                    <img src="~/images/mestrai-logo2.png" alt="MestrAI Logo" width="98" height="98" class="me-2">
                    MestrAI
                </h1>
                <p class="lead mb-4">Sistema de gerenciamento de sessões de RPG com IA integrada</p>
                
                @if (!(User?.Identity?.IsAuthenticated ?? false))
                {
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a href="/Identity/Account/Login" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Fazer Login
                        </a>
                        <a href="/Identity/Account/Register" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-person-plus me-2"></i>
                            Criar Conta
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (!(User?.Identity?.IsAuthenticated ?? false))
{
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <div class="text-center mb-3">
                            <i class="bi bi-table display-4 text-primary"></i>
                        </div>
                        <h5 class="card-title text-center">Minhas Mesas</h5>
                        <p class="card-text text-center flex-grow-1">Gerencie suas mesas de RPG e participe de sessões épicas</p>
                        <a asp-page="/Mesas/Index" class="btn btn-primary">
                            <i class="bi bi-arrow-right me-2"></i>
                            Ver Mesas
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <div class="text-center mb-3">
                            <i class="bi bi-play-circle display-4 text-success"></i>
                        </div>
                        <h5 class="card-title text-center">Sessões Ativas</h5>
                        <p class="card-text text-center flex-grow-1">Acesse suas sessões em andamento e continue a aventura</p>
                        <a asp-page="/Sessions/Index" class="btn btn-success">
                            <i class="bi bi-arrow-right me-2"></i>
                            Ver Sessões
                        </a>
                    </div>
                </div>
            </div>

            @if ((User?.IsInRole("Narrator") ?? false) || (User?.IsInRole("Admin") ?? false))
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="text-center mb-3">
                                <i class="bi bi-robot display-4 text-info"></i>
                            </div>
                            <h5 class="card-title text-center">Assistente IA</h5>
                            <p class="card-text text-center flex-grow-1">Teste e configure a integração com IA para suas sessões</p>
                            <a asp-page="/AiTest" class="btn btn-info">
                                <i class="bi bi-arrow-right me-2"></i>
                                Testar IA
                            </a>
                        </div>
                    </div>
                </div>
            }

            @if (User?.IsInRole("Admin") ?? false)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="text-center mb-3">
                                <i class="bi bi-people display-4 text-warning"></i>
                            </div>
                            <h5 class="card-title text-center">Gerenciar Membros</h5>
                            <p class="card-text text-center flex-grow-1">Administre usuários e permissões do sistema</p>
                            <a asp-page="/Admin/Members/Index" class="btn btn-warning">
                                <i class="bi bi-arrow-right me-2"></i>
                                Ver Membros
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <h3 class="text-center mb-4">Bem-vindo!</h3>
                        <p class="text-center mb-4">Faça login para acessar suas sessões de RPG</p>
                        
                        <div class="alert alert-info">
                            <h6 class="alert-heading">
                                <i class="bi bi-info-circle me-2"></i>
                                Usuários de Demonstração:
                            </h6>
                            <hr>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="demo-user">
                                        <strong>Admin:</strong><br>
                                        <code>admin@rpg.local</code><br>
                                        <code>Admin123!</code>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="demo-user">
                                        <strong>Narrador:</strong><br>
                                        <code>narrator@rpg.local</code><br>
                                        <code>Narrator123!</code>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="demo-user">
                                        <strong>Jogador:</strong><br>
                                        <code>player@rpg.local</code><br>
                                        <code>Player123!</code>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
